# ─── Server ─────────────────────────────────────────────────────
NODE_ENV=development
PORT=4000

# ─── Database ────────────────────────────────────────────────────
DATABASE_URL=postgres://robowar:robowar_secret@localhost:5432/robowar

# ─── Redis ───────────────────────────────────────────────────────
REDIS_URL=redis://:robowar_redis@localhost:6379

# ─── Auth ────────────────────────────────────────────────────────
JWT_SECRET=change_this_to_a_long_random_secret_in_production
JWT_REFRESH_SECRET=change_this_refresh_secret_too

# ─── CORS ────────────────────────────────────────────────────────
CORS_ORIGIN=http://localhost:3000

# ─── Web3 ────────────────────────────────────────────────────────
ELDR_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
WEB3_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
CHAIN_ID=1

# ─── Logging ────────────────────────────────────────────────────
LOG_LEVEL=debug
